<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 後台</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("css", required: false)
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="@Url.RouteUrl("Admin")" title="SOSO部落格後台">SOSO部落格後台</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.RouteUrl("Admin")" title="管理文章">管理文章</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.RouteUrl("CreateArticle")" title="新增文章">新增文章</a>
                </li>
            </ul>
            <div class="my-2 my-lg-0">
                <a class="btn btn-outline-success my-2 my-sm-0" href="@Url.RouteUrl("LoginOut")" title="登出">登出</a>
            </div>
        </div>
    </nav>

    <div class="mt-5">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("js", required: false)

</body>
</html>
