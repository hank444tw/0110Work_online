
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "SOSO大事紀";
}

@section css{
    <link href="~/Scripts/aos-master/dist/aos.css" rel="stylesheet" />
    <link href="~/Content/SOSOevents.css" rel="stylesheet" />
}


@section js{
    <script src="~/Scripts/aos-master/dist/aos.js"></script>

    <script>
        //$(function () {
        let hei = $(document).height();
        let wid = $(document).width();
        $("#divMaskFrame").css("height", hei).css("width", wid);

