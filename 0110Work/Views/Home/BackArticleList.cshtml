@model IEnumerable<_0110Work.Models.Article>

@{
    ViewBag.Title = "管理文章";
}


<div class="container">

    <h2 class="mt-3 mb-3 text-center" style="margin-top:8rem">管理文章</h2>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">封面圖片</th>
                <th scope="col">標題</th>
                <th scope="col">發表時間</th>
                <th scope="col">最後修改時間</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            <form action="@Url.RouteUrl("DeleteArticle")" method="post">
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">
                            <img class="img-fluid" src="~/Images/ArticleImg/@item.imageName" alt="@item.title" title="@item.title" style="width:100px;height:100px" />
                        </th>
                        <td class="align-middle">@item.title</td>
                        <td class="align-middle">@item.postDate</td>
                        <td class="align-middle">
                            @if (item.editDate != null)
                            {
                                @item.editDate;
                            }
                        </td>
                        <td class="align-middle">
                            <a href="@Url.RouteUrl("EditArticle",new {aId=item.aId})" class="btn btn-warning text-white mb-2">
                                <i class="fa fa-pencil"></i>
                                編輯
                            </a>
                            <button type="submit" class="btn btn-danger mb-2" name="aId" value="@item.aId">
                                <i class="fa fa-trash-o"></i>
                                刪除
                            </button>
                        </td>
                    </tr>
                }
            </form>
        </tbody>
    </table>
</div>

